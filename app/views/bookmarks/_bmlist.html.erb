<div class="row">
  <% topic.bookmarks.each do |bookmark| %>
  <div class="col-sm-3">
    <div class="well bookmark_box">
      <%= bookmark.url %> <br>
      <%# if policy(@bookmark).destroy? %>
        <%= link_to "Delete", [bookmark.topic, bookmark], method: :delete, class: 'glyphicon glyphicon-trash', data: { confirm: "Are you sure you want to delete this bookmark?" } %>
      <%# end %>
      <br>
      <%# if policy(@bookmark).edit? %>
        <%= link_to "Edit", edit_topic_bookmark_path(bookmark.topic, bookmark), class: 'glyphicon glyphicon-pencil' %>
      <%#  end %>
    </div>
  </div>
  <% end %>
</div>
