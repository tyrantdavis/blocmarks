<h1> <%= @topic.title %>
  <% if policy(@topic).edit?  && policy(@topic).destroy? %>
    <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
    <%= link_to "Add Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-primary' %>
    <%= link_to "Return", topics_path, class: 'btn btn-info' %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  <% end %>
</h1>

<% if @topic.bookmarks.empty? %>
 <div class="well bookmark_box">
   <p> No Bookmarks posted to this topic. </p>
 </div>
<% end %>

<%= render partial: 'bookmarks/bmlist', locals: { topic: @topic } %>
